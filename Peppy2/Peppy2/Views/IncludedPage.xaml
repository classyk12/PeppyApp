                    <Label Text="Steam cleaning and/or carpet cleaning" TextColor="red" FontSize="Medium" Margin="0,0,0,5" FontAttributes="Bold"></Label>
                    <Label Text="Lifting heavy items (such as furniture or white goods)" TextColor="Red" FontSize="Medium" Margin="0,0,0,5" FontAttributes="Bold"></Label>
                    <Label Text="Cleaning or maintainance of outside areas such as garages, patios, decks and gardens" TextColor="Red" Margin="0,0,0,5"  FontSize="Medium" FontAttributes="Bold"></Label>
                    <Label Text="Cleaning of exteriors, including walls and windows" TextColor="Red" FontSize="Medium" Margin="0,0,0,5" FontAttributes="Bold"></Label>
                    <Label Text="End of lease Cleanings" TextColor="Red" FontSize="Medium" Margin="0,0,0,5" FontAttributes="Bold"></Label>
            </StackLayout>







        </StackLayout>
    </Frame>
    </ScrollView>
